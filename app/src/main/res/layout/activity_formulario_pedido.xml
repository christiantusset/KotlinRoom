<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".activity.ui.FormularioPedidoActivity">

	<android.support.design.widget.TextInputLayout
		android:id="@+id/formulario_pedido_title"
		android:layout_width="368dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<android.support.design.widget.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Nome"
			android:textSize="18sp" />
	</android.support.design.widget.TextInputLayout>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/formulario_pedido_recycler_view"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="8dp"
		android:layout_marginBottom="8dp"
		app:layoutManager="android.support.v7.widget.LinearLayoutManager"
		app:layout_constraintBottom_toTopOf="@+id/formulario_pedido_salvar"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/formulario_pedido_title"
		tools:listItem="@layaout/item" />

	<Button
		android:id="@+id/formulario_pedido_salvar"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:text="Salvar"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/formulario_pedido_title"
		app:layout_constraintVertical_bias="1.0" />

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/formulario_pedido_add_itens"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="8dp"
		android:src="@drawable/ic_action_add"
		app:layout_constraintBottom_toTopOf="@+id/formulario_pedido_salvar"
		app:layout_constraintEnd_toEndOf="@+id/formulario_pedido_recycler_view" />


</android.support.constraint.ConstraintLayout>