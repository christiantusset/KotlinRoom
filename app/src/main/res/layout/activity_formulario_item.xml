<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.pedido.formulario.FormularioPedidoActivity">

	<android.support.design.widget.TextInputLayout
		android:id="@+id/formulario_item_nome"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<android.support.design.widget.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/input_nome"
			android:textSize="18sp"
			tools:text="Nome" />
	</android.support.design.widget.TextInputLayout>

	<android.support.design.widget.TextInputLayout
		android:id="@+id/formulario_item_valor"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintEnd_toEndOf="@+id/formulario_item_nome"
		app:layout_constraintStart_toStartOf="@+id/formulario_item_nome"
		app:layout_constraintTop_toBottomOf="@+id/formulario_item_nome">

		<android.support.design.widget.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/input_valor"
			android:textSize="18sp"
			tools:text="Valor" />
	</android.support.design.widget.TextInputLayout>


	<Button
		android:id="@+id/formulario_item_salvar"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:layout_marginTop="8dp"
		android:text="@string/botao_salvar_pedido"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/formulario_item_valor"
		app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>